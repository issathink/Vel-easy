<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/full_widget"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="4dp"
    android:background="@drawable/widget_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fav1"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Station favorite"
            android:textColor="@android:color/white"
            android:textSize="10dp"
            android:padding="3dp" />
        <TextView
            android:id="@+id/fav2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Station favorite"
            android:textColor="@android:color/white"
            android:textSize="10dp"
            android:padding="3dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
        android:id="@+id/logo1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/velicon"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/nbVelib1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="10"
            android:paddingTop="7dp"
            android:paddingLeft="6dp" />
        <ImageView
            android:id="@+id/parking1"
            android:layout_marginLeft="15dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/parking"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/nbPlace1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="10"
            android:paddingTop="7dp"
            android:paddingLeft="6dp" />

        <ImageView
            android:id="@+id/logo2"
            android:layout_width="30dp"
            android:layout_marginLeft="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/velicon"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/nbVelib2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="10"
            android:paddingTop="7dp"
            android:paddingLeft="6dp" />
        <ImageView
            android:id="@+id/parking2"
            android:layout_marginLeft="15dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/parking"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/nbPlace2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="10"
            android:paddingTop="7dp"
            android:paddingLeft="6dp" />
    </LinearLayout>


</LinearLayout>