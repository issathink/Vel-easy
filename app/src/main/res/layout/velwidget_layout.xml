<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/full_widget"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/widget_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fav1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Station favorite"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:textSize="8sp"
            android:padding="3dp" />
        <TextView
            android:id="@+id/fav2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_weight="1"
            android:text="Station favorite"
            android:textColor="@android:color/white"
            android:textSize="8sp"
            android:padding="3dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
        android:id="@+id/logo1"
        android:layout_width="wrap_content"
        android:layout_weight="0.5"
        android:layout_height="30dp"
            android:paddingBottom="5dp"
        android:src="@mipmap/bicycle"
        android:layout_gravity=""
       />

        <TextView
            android:id="@+id/nbVelib1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_weight="0.5"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="10"
            android:layout_gravity="center"
            />
        <ImageView
            android:id="@+id/parking1"
            android:layout_weight="0.5"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:paddingTop="4dp"
            android:paddingBottom="5dp"
            android:src="@mipmap/parking"
            />

        <TextView
            android:id="@+id/nbPlace1"
            android:layout_width="wrap_content"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="10" />

        <ImageView
            android:id="@+id/logo2"
            android:layout_weight="0.5"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:paddingBottom="5dp"
            android:src="@mipmap/bicycle"
            />
        <TextView
            android:id="@+id/nbVelib2"
            android:layout_weight="0.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="10"/>
        <ImageView
            android:id="@+id/parking2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:paddingTop="4dp"
            android:paddingBottom="5dp"
            android:layout_weight="0.5"
            android:src="@mipmap/parking"
            />
        <TextView
            android:id="@+id/nbPlace2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="10sp"
            android:layout_weight="0.5"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="10" />
    </LinearLayout>


</LinearLayout>